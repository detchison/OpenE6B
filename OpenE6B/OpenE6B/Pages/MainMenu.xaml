<Page x:Class="OpenE6B.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenE6B.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="MainMenu">

    <Grid>
        <StackPanel>
            <TextBlock Foreground="WhiteSmoke" Text="Main Menu" FontSize="18" HorizontalAlignment="Center" />
            <DockPanel Margin="20,10" HorizontalAlignment="Center">
                <Button Content="Metar/TAF" Style="{DynamicResource MainMenuButton}" Width="150" Margin="0,0,20,0" />
                <Button Content="Metar/TAF" Style="{DynamicResource MainMenuButton}" Width="150" />
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
