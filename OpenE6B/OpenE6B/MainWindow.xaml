<Window x:Class="OpenE6B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenE6B"
        mc:Ignorable="d"
        Title="OpenE6B | Open Source Aviation Calculator" d:DesignHeight="450" d:DesignWidth="650" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Background="{StaticResource BackgroundGradient}">
        <StackPanel>
            <TextBlock Style="{StaticResource HeaderTextBlock}" Text="OpenE6B" Margin="0,10,0,0" />
            <Separator Margin="20,10,20,0"></Separator>
            <Frame Name="MainContentFrame" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
